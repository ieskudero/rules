<div class="conficonfiTreeRoot" data-id="{{id}}" data-uuid="{{uuid}}">
    <div class="subtreeRoot">
        <div class="itemClass">
            <div class="treeNameContainerClass">                
                <div class="arrowContainer">
                    <div class="arrow material-icons"  data-id="{{id}}" data-uuid="{{uuid}}">arrow_drop_down</div>
                </div>
                <div class="nameClassRoot" data-type="BOMB" data-id="{{id}}" data-uuid="{{uuid}}">{{name}}</div>
                <div class="addTreeButtonRoot  material-icons" data-id="{{id}}" data-uuid="{{uuid}}">add</div>
            </div>
            <div class="treeChildrenRoot">
                {{#if pointers}} {{! Within the context of the current item }}
                    {{#each pointers}}
                            <div class="subtreepointer">{{> tree}}</div> {{! Recursively render the partial }}
                    {{/each}}
                {{/if}}
            </div>
        </div>
    </div>
</div>